extends layout

block content
  .main
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow-sm.p-4
            .card-body
              h1.text-center.mb-4 Change Password
              form(method="POST" action="/change-password")
                .mb-3
                  label.form-label(for="oldPassword") Old Password
                  input#oldPassword.form-control(type="password" name="oldPassword" placeholder="Enter old password" required)
                .mb-3
                  label.form-label(for="newPassword") New Password
                  input#newPassword.form-control(type="password" name="newPassword" placeholder="Enter new password" required)
                .mb-3
                  label.form-label(for="confirmPassword") Confirm New Password
                  input#confirmPassword.form-control(type="password" name="confirmPassword" placeholder="Confirm new password" required)
                button.btn.btn-primary.w-100.mt-3(type="submit") Update Password
