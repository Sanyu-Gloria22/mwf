extends layout-forms

block content
  .main
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card.shadow-sm.p-4
            .card-body
              h2.text-center.mb-4 Edit Profile
              form(method="POST" action="/edit-profile" enctype="multipart/form-data")
                if user.profilePicture
                  .text-center.mb-3
                    img.rounded-circle(src=`/uploads/${user.profilePicture}` alt="Profile Picture" width="120" height="120")
                .mb-3
                  label.form-label(for="fullName") Full Name
                  input#fullName.form-control(type="text" name="fullName" value=user.fullName required)
                .mb-3
                  label.form-label(for="emailAddress") Email Address
                  input#emailAddress.form-control(type="email" name="emailAddress" value=user.emailAddress required)
                .mb-3
                  label.form-label(for="userName") Username
                  input#userName.form-control(type="text" name="userName" value=user.userName required)
                .mb-3
                  label.form-label(for="phoneNumber") Phone Number
                  input#phoneNumber.form-control(type="number" name="phoneNumber" value=user.phoneNumber required)
                .mb-3
                  label.form-label(for="address") Address
                  input#address.form-control(type="text" name="address" value=user.address required)
                .mb-3
                  label.form-label(for="profilePicture") Upload New Profile Picture
                  input#profilePicture.form-control(type="file" name="profilePicture" accept="image/*")
                button.btn.btn-primary.w-100.mt-3(type="submit") Update Profile
