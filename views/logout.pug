doctype html
html
  head
    title MWF | Logout
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    style.
      body {
        background: linear-gradient(135deg, #E0C4A0, #E0C4A0);
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Poppins', sans-serif;
        overflow: hidden;
      }
      .logout-card {
        text-align: center;
        background: white;
        padding: 2.5rem 3rem;
        border-radius: 24px;
        box-shadow: 0 4px 25px rgba(0,0,0,0.1);
        animation: fadeIn 1s ease-in-out;
        transition: opacity 1s ease-in-out;
      }
      .logo {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
      }
      h2 {
        color: #73411f;
        margin-bottom: 0.5rem;
      }
      .tagline {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 1.5rem;
      }
      .spinner-border {
        color: #73411f ;
      }
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
  body
    - let message = "Youâ€™ve successfully logged out of MWF System."
    if role === "Manager"
      - message = "See you soon, Manager " + username + " ðŸ‘‹"
    else if role === "Attendant"
      - message = "Good work today, Attendant " + username + " ðŸ‘"
    else
      - message = "Goodbye " + username + " ðŸ‘‹"

    .logout-card#logoutCard
      img.logo(src="/images/M.png", alt="MWF Logo")
      h2 #{message}
      p.text-muted Redirecting to login page...
      div.spinner-border(role="status")

    script.
      const card = document.getElementById('logoutCard');
      setTimeout(() => {
        card.style.opacity = '0';
      }, 4500);
      setTimeout(() => {
        window.location.href = "/";
      }, 5500);
