doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MWF Manager Dashboard
  link(rel='stylesheet' href='/css/manager.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css')
nav.navbar.navbar-expand-lg
  .container-fluid
    a.navbar-brand(href='/') MWF
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarNavAltMarkup.collapse.navbar-collapse
      .navbar-nav
        a.nav-link.active(aria-current='page' href='manager.html') Dashboard
        a.nav-link(href='/getusers') Users
        a.nav-link(href='/attendant') Attendants
        a.nav-link(href='/products') Products
        a.nav-link(href='/sales')  Add Sales
        a.nav-link(href='/saleslist') Sales
        a.nav-link(href='/stock') Add Stock
        a.nav-link(href='/stocklist') Stocklist
        a.nav-link(href='/report') Report
.container
  h2 Manager's Dashboard
  .cards
    .card
      h3 Furniture
      p Total Items: #{furnitureTotals.totalItems}
      p Total Value: UGX #{furnitureTotals.totalValue.toLocaleString()}

    .card
      h3 Wood
      p Total Items: #{woodTotals.totalItems}
      p Total Value: UGX #{woodTotals.totalValue.toLocaleString()}
        //- p   #{totalExpensePoles.totalCost} Shs
        //- p   #{totalExpenseChair.totalCost} Shs
    .card
      h3 Top Item
      p Office Desk  
    .card
      h3 Low Stock Items
      p 7
    .card
      h3 Top Item
      p Office Desk  
    .card
      h3 Total Sales
      p #{totalSales}
    .card
      h3 Top Item
      p Office Desk
  .charts
    .chart-box
      h3 Monthly Revenue Trend
      canvas#revenueChart
    .chart-box
      h3 Top Selling Items
      canvas#topItemsChart
    .chart-box
      h3 Sales Growth
      canvas#growthChart
  .tables
    .table-box
      h3 Recent Sales
      table
        thead
          tr
            th Date
            th Item
            th Qty
            th Total (UGX)
        tbody
          tr
            td 
            td 
            td 
            td 
          tr
            td 
            td 
            td 
            td 
    .table-box
      h3 Stock Overview
      table
        thead
          tr
            th Item
            th In Stock
            th Reorder Level
        tbody
          tr
            td 
            td 
            td 
          tr
            td 
            td 
            td 
