doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MW&amp;F SIGNUP
  link(rel='stylesheet' href='/css/signup.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css')
form#login-form(action='/signup' method='POST')
  .main
    .container
      .apply-box
        h1
          | Sign Up
          span
      br
      br
    .mb-4
      label.form-label(for='name') Full Name
      input#name.form-control(type='name' name='fullName')
    .mb-4
      label.form-label(for='gender') Gender
      select.form-select(name="gender" type="gender" required) 
          option(value="Male") Male
          option(value="Female") Female
    .mb-4
      label.form-label(for='nin') NIN
      input#email.form-control(type='nin' name='nin' required)
    .mb-4
      label.form-label(for='email') Email address
      input#email.form-control(type='email' name='emailAddress')
    .mb-4
      label.form-label(for='phoneNumber') Phone Number
      input#phoneNumber.form-control(type='phoneNumber' name='phoneNumber')
    .mb-4.position-relative
      label.form-label(for='password') Password
      input#password.form-control(type='password' name='password')
      span.toggle-password(onclick='togglePassword()')
        i#toggleIcon.fa-solid.fa-eye
    .mb-3
      b-4
      label.form-label(for='role') Select Role
      select.form-select(name="role" type="role" required) 
          option(value="Manager") Manager
          option(value="Attendant") Attendant
      .mb-4.form-check(style=' margin: auto; margin-right: 0; width: fit-content; display: block;')
        input#exampleCheck1.form-check-input(type='checkbox')
        label.form-check-label(for='exampleCheck1') Forgot password
    button.btn1(type='submit') Signup
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js')
