extends layout 
block content
  h2 Stock Recording
  .form-container
    form(action="/stock" method="POST")
      label(for='productName')
        | Product Name:
        input(type='text' name='productName')
      label(for='productType')
        | Product Type:
        input(type='text' name='productType')
      label(for='quantity')
        | Quantity:
        input(type='number' name='quantity')
      label(for='costPrice')
        | Cost Price:
        input(type='number' name='costPrice')
      label(for='productPrice')
        | Product Price:
        input(type='number' name='productPrice')  
      label(for='quality')
        | Quality:
        select(name='quality')
          option(value="High") High
          option(value="Strong") Strong
          option(value="Basic") Basic
          option(value="Smooth") Smooth
          option(value="Lightweight") Lightweight
          option(value="stable") Stable
      label(for='color')
        | Color:
        input(type='text' name='color')
      label(for='measurements')
        | Measurements:
        select(name='measurement')
          option(value="Low") Low
          option(value="High") High
          option(value="Medium") Medium
      label
        | Date:
        input(type='date' name='date')
      label(for='SupplierName')
        | Supplier&apos;s Name:
        input(type='text' name='supplierName' value="" required)
      button(type='submit') Add Stock
  script(src='/Js/form.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js')
