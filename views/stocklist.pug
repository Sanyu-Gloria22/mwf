extends layouttables 
block content
  h2 MWF Stocklist
  table
    thead
      tr
        th Product Name
        th Product Type
        th Quantity
        th Cost Price
        th Product Price
        th Quality
        th Color
        th Measurement
        th Date
        th Supplier's Name
    tbody
      if items.length 
        each item in items 
          tr
            td #{item.productName}
            td #{item.productType}
            td #{item.quantity}
            td #{item.costPrice}
            td #{item.productPrice}
            td #{item.quality}
            td #{item.color}
            td #{item.measurement}
            td #{moment(item.date).format("DD-MM-YYYY")}
            td #{item.supplierName}
  .button-container
    button.btn.btn-primary.btn-lg(type='button') Add Stock
  footer.footer
    p &copy; 2025 MWF Company | All Rights Reserved
    .social-icons
      a(href='https://www.facebook.com' target='_blank')
        i.fab.fa-facebook-f
      a(href='https://twitter.com' target='_blank')
        i.fab.fa-twitter
      a(href='https://www.linkedin.com' target='_blank')
        i.fab.fa-linkedin-in
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js')
