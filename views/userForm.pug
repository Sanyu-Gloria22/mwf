doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title MW&amp;F SIGNUP
  link(rel='stylesheet' href='/css/signup.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css')
form#login-form(action='/userForm' method='post' enctype="multipart/form-data")
  h2 Register User
  .form-row
    .form-group
      label(for='profilePicture') Profile Picture (optional)
      input#profilePicture(type='file' name='profilePicture' accept='image/*')
    .form-group
      label(for='fullName') Full Name
      input#fullName(type='text' name='fullName')
    .form-group
      label(for='email') Email Address
      input#email(type='text' name='emailAddress')
    .form-group
      label(for='userName') User Name
      input#userName(type='text' name='userName')  
    .form-group
      label(for='gender') Gender
      input#gender(type='text' name='gender')
  .form-row    
    .form-group
      label(for='role') Role
      input#role(type='text' name='role')
    .form-group
      label(for='phoneNumber') Phone Number
      input#phoneNumber(type='number' name='phoneNumber')
    .form-group
      label(for='address') Address
      input#address(type='text' name='address')  
  .form-row
    .form-group
      label(for='date') Date
      input#date(type='date' name='date')
    .form-group
      label(for='status') Status
      input#date(type='text' name='status')  
    .form-group.position-relative
      label(for='password') Password
      input#password(type='text' name='password')
      span.toggle-password(onclick='togglePassword()')
        i#toggleIcon.fa-solid.fa-eye
  button(type='submit') Register Attendant
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js')
script(src='/public/scripts/form.js')
